<%= form_for [@category, @product] do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="control-group"> 
    <%= f.label  t('categories.select') , class: 'control-label' -%>
    <div class="controls">
      <%=  f.text_field 'category_name' ,value:  @category.name , disabled: 'disabled' %>
    </div>
  </div>
  <% @category.properties.order_by(:'position'.asc).each_with_index do |item, i| -%>
    <div class="control-group"> 
      <%= f.label "#{item.id}", item.name , class: 'control-label' -%>
      <div class="controls">
        <%= f.text_field "#{item.id}", :value => render_product_parameter_value_tag(@product, item.id) -%>
        <%= item.value -%>
      </div>
    </div>
  <%- end -%>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

