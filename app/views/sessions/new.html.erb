
<% if current_user %>
  <h4><%= t("users.profile") %></h4>
  <hr>
  <dl class="dl-horizontal">
    <dt><%= t('users.name') %></dt>
    <dd><%= current_user.name %></dd>
    <dt><%= t('users.email') %></dt>
    <dd><%= current_user.email %></dd>
    <dt><%= t('users.role') %></dt>
    <dd><%= current_user.role %></dd>

  </dl>

  <p><%= link_to t("logout"), logout_path %></p>
<% else %>
  <h4><%= t("users.sign")  %><small>  <%= link_to t("create_account"), new_identity_path %></small></h4>
  <hr>

  <%= form_tag "/auth/identity/callback" , :class => 'form-horizontal' do %>
    <div class="form-group">
      <%= label_tag :auth_key, t("users.email"), class: 'col-sm-2 control-label' %>
      <div class="col-sm-8">
        <%= text_field_tag :auth_key %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :password, t("users.password"), class: 'col-sm-2 control-label' %>
      <div class="col-sm-8">
        <%= password_field_tag :password %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= submit_tag t("users.login"), class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
<% end %>
