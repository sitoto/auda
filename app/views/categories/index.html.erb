<h1><%= t("categories.list") %></h1>

<table class="table">
  <thead>
    <tr>
      <th><%= t("categories.name") %></th>
      <th><%= t("categories.note") %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.note %></td>
        <td><%= link_to t('show'), category %></td>
        <td><%= link_to t('edit'), edit_category_path(category) %></td>
        <td><%= link_to t('destroy'), category, method: :delete, data: { confirm: t('categories.delete', name: category.name) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('categories.new'), new_category_path %>
