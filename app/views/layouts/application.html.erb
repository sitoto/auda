<!DOCTYPE html>
<html>
  <head>
    <%= render_page_title %>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body data-offset="50">
    <div class="navbar navbar-inverse  navbar-fixed-top bs-nav">
        <div class="container">
          <nav class="navbar-collapse bs-navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to t('site_name'), root_url  %></li>
            <li><%= link_to t('categories.list'), categories_path  %></li>
            <li><%= link_to t('pairs.list'), pairs_path  %></li>
            <li><%= link_to t('nodes.list'), nodes_path  %></li>

          </ul>
          <%= render "common/user_nav" %>
          </nav>
        </div>
    </div>
    <div class="container">
      <%= notice_message %>
      <div id="main" class="container-fluid">
        <div class="col-sm-3">
        </div>
        <div class="col-sm-9">
          <%= yield %>
        </div>
      </div>
    </div>
    <footer class="bs-footer">
    <div class="container">
      <%= render 'common/footer' %>
    </div>
    </footer>
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>
